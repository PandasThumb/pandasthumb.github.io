---
layout: default
regenerate: true
title: Archives
permalink: /archives/
---
<section class="archive">
  <div class="grid item">
    <div class="unit whole">
      <article>
        <header>
          <h1>Article Archives</h1>
        </header>
<ul class="posts">
{% for post in page.posts %}
  <li>
    <span class="post-date">{{ post.date | date: "%b %-d, %Y" }}</span>
    <a class="post-link" href="{{ post.url | relative_url }}">{{ post.title }}</a>
  </li>
{% endfor %}
</ul>
        {{ site.archives }}
        <ul class="archivelist">
        {% for year in site.archives reversed %}
          <li> <a href="{{ site.url }}{{ site.baseurl }}/archives/{{ year.url }}">{{ year.posts[0].date | date:"%Y" }}</a></li>
        {% endfor %}
        </ul>
      </article>
    </div>
  </div>
</section>
